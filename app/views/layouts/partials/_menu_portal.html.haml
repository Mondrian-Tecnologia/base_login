
#menu.fullwidth-menu.bg-portal-gray
  .container
    %header.blog-header.py-3
      .row.flex-nowrap.justify-content-between.align-items-center
        .col-2.pt-1
        .col-4.d-flex.justify-content-end.align-items-center
          = link_to '#', onclick: 'fecharMenuMobile()', class: 'menu' do
            = svg_icon :'x', class: 'svg-menu-x'

    - portal_menus.each do |title, hash|
      .row
        .col
          .text-center
            .h2.pb-4.mt-2.mb-2
              = link_to title, hash, class: 'menu-item bold'
